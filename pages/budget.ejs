<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GlobalTrotter - Itinerary</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-base-200 font-sans text-base-content">
    <div class="flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar', { currentPage: 'itinerywithbudget' }) %>

        <!-- Main Content -->
        <main class="flex-1 lg:ml-64 p-6">
            <div class="max-w-5xl mx-auto bg-base-100">
        <!-- Header -->
        <div class="border-b-2 border-gray-300 p-4 flex items-center justify-between">
            <span class="text-lg font-medium">GlobalTrotter</span>
            <div class="w-8 h-8 border-2 border-gray-400 rounded-full"></div>
        </div>

        <!-- Search and Filters -->
        <div class="p-4 border-b border-gray-300">
            <div class="flex gap-2 items-center">
                <div class="flex-1 relative">
                    <svg class="absolute left-3 top-2.5 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    <input
                        type="text"
                        placeholder="Search bar ......"
                        class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded"
                    />
                </div>
                <button class="px-4 py-2 border border-gray-300 rounded flex items-center gap-2">
                    <span class="text-sm">Group by</span>
                </button>
                <button class="px-4 py-2 border border-gray-300 rounded flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                    </svg>
                    <span class="text-sm">Filter</span>
                </button>
                <button class="px-4 py-2 border border-gray-300 rounded text-sm">
                    Sort by...
                </button>
            </div>
        </div>

        <!-- Itinerary Content -->
        <div class="p-6">
            <h2 class="text-center text-lg font-semibold mb-8">
                Itenary for a selected place
            </h2>

            <!-- Table Header -->
            <div class="grid grid-cols-2 gap-4 mb-6">
                <div class="text-center font-semibold text-base border-b-2 border-gray-300 pb-2">
                    Physical Activity
                </div>
                <div class="text-center font-semibold text-base border-b-2 border-gray-300 pb-2">
                    Expense
                </div>
            </div>

            <!-- Day 1 -->
            <div class="mb-8">
                <div class="mb-4 px-4 py-1 border border-gray-400 rounded w-20 text-sm font-medium">
                    Day 1
                </div>
                <div class="space-y-4">
                    <% for(let i = 1; i <= 3; i++) { %>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="border-2 border-gray-300 rounded p-4 h-16"></div>
                        <div class="border-2 border-gray-300 rounded p-4 h-16"></div>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Day 2 -->
            <div>
                <div class="mb-4 px-4 py-1 border border-gray-400 rounded w-20 text-sm font-medium">
                    Day 2
                </div>
                <div class="space-y-4">
                    <% for(let i = 1; i <= 3; i++) { %>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="border-2 border-gray-300 rounded p-4 h-16"></div>
                        <div class="border-2 border-gray-300 rounded p-4 h-16"></div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
            </div>
        </main>
    </div>
</body>
</html>