<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar View - GlobalTrotter</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Alpine.js and Alpine Ajax -->
    <script defer src="https://cdn.jsdelivr.net/npm/@imacrayon/alpine-ajax@0.8.0/dist/alpine-ajax.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.1/dist/cdn.min.js"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        gold: {
                            400: '#d4a574',
                            500: '#c4945a',
                            600: '#b08450',
                        }
                    }
                }
            }
        }
    </script>
    <style>
        [x-cloak] { display: none !important; }
        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
        }
    </style>
</head>
<body class="min-h-screen bg-base-200 font-sans text-base-content">
    <div class="flex" x-data="calendarApp()">
        <!-- Sidebar -->
        <%- include('partials/sidebar', { currentPage: 'calender' }) %>

        <!-- Main Content -->
        <main class="flex-1 lg:ml-64 p-8 transition-all duration-300">
            <!-- Header -->
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
                <div>
                    <h2 class="text-3xl font-bold text-gray-800">My Calendar</h2>
                    <p class="text-gray-500 mt-1">Visualize your journey and daily plans</p>
                </div>
                
                <div class="flex items-center gap-4">
                    <!-- User Profile -->
                    <div class="avatar placeholder cursor-pointer" @click="window.location.href='/profile'">
                        <div class="bg-gold-400 text-white rounded-full w-10">
                            <span class="text-lg">U</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Calendar Card -->
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body p-6">
                    
                    <!-- Toolbar -->
                    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
                        <div class="flex items-center gap-4">
                            <button @click="prevMonth" class="btn btn-circle btn-ghost btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
                            </button>
                            <h3 class="text-xl font-bold w-48 text-center" x-text="monthYearDisplay"></h3>
                            <button @click="nextMonth" class="btn btn-circle btn-ghost btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                            </button>
                        </div>
                        
                        <div class="flex gap-2">
                            <button @click="goToToday" class="btn btn-sm btn-outline border-gold-400 text-gold-600 hover:bg-gold-400 hover:text-white hover:border-gold-400">Today</button>
                        </div>
                    </div>

                    <!-- Calendar Grid -->
                    <div class="border rounded-lg overflow-hidden">
                        <!-- Weekday Headers -->
                        <div class="calendar-grid bg-base-200 border-b">
                            <template x-for="day in ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat']">
                                <div class="p-3 text-center text-sm font-semibold text-gray-600" x-text="day"></div>
                            </template>
                        </div>

                        <!-- Days -->
                        <div class="calendar-grid bg-white">
                            <!-- Empty cells for previous month -->
                            <template x-for="blank in blanks">
                                <div class="h-32 border-b border-r bg-gray-50/50"></div>
                            </template>

                            <!-- Actual days -->
                            <template x-for="date in daysInMonth">
                                <div 
                                    class="h-32 border-b border-r p-2 relative hover:bg-base-100 transition-colors cursor-pointer group"
                                    :class="{'bg-blue-50': isToday(date.day)}"
                                    @click="selectDate(date.day)"
                                >
                                    <span 
                                        class="text-sm font-medium w-7 h-7 flex items-center justify-center rounded-full"
                                        :class="isToday(date.day) ? 'bg-gold-400 text-white' : 'text-gray-700'"
                                        x-text="date.day"
                                    ></span>

                                    <!-- Trips on this day -->
                                    <div class="mt-1 space-y-1 overflow-y-auto max-h-[calc(100%-2rem)]">
                                        <template x-for="trip in getTripsForDate(date.day)">
                                            <div 
                                                class="text-xs p-1 rounded truncate text-white shadow-sm"
                                                :class="getTripColor(trip)"
                                                x-text="trip.title"
                                                :title="trip.title"
                                            ></div>
                                        </template>
                                    </div>
                                    
                                    <!-- Add button (visible on hover) -->
                                    <button class="absolute bottom-2 right-2 btn btn-circle btn-xs btn-ghost opacity-0 group-hover:opacity-100 text-gold-500">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                                    </button>
                                </div>
                            </template>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Day Details Modal -->
            <dialog id="day_modal" class="modal">
                <div class="modal-box">
                    <h3 class="font-bold text-lg" x-text="selectedDateDisplay"></h3>
                    <div class="py-4">
                        <template x-if="selectedTrips.length === 0">
                            <p class="text-gray-500 italic">No trips planned for this day.</p>
                        </template>
                        <template x-for="trip in selectedTrips">
                            <div class="card bg-base-200 mb-2 p-4">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <h4 class="font-bold text-gray-800" x-text="trip.title"></h4>
                                        <p class="text-xs text-gray-600" x-text="trip.description || 'No description'"></p>
                                        <div class="text-xs mt-1 text-gray-500">
                                            <span x-text="formatDate(trip.start_date)"></span> - <span x-text="formatDate(trip.end_date)"></span>
                                        </div>
                                    </div>
                                    <a :href="'/itinerary?tripId=' + trip.id" class="btn btn-xs btn-outline btn-primary">View</a>
                                </div>
                            </div>
                        </template>
                    </div>
                    <div class="modal-action">
                        <form method="dialog">
                            <button class="btn">Close</button>
                        </form>
                    </div>
                </div>
                <form method="dialog" class="modal-backdrop">
                    <button>close</button>
                </form>
            </dialog>

        </main>
    </div>

    <script>
        function calendarApp() {
            return {
                currentDate: new Date(),
                trips: [],
                selectedDay: null,
                
                init() {
                    this.fetchTrips();
                },

                async fetchTrips() {
                    const token = localStorage.getItem('token');
                    if (!token) return;

                    try {
                        const response = await fetch('/api/trips', {
                            headers: { 'Authorization': `Bearer ${token}` }
                        });
                        if (response.ok) {
                            const data = await response.json();
                            this.trips = data.trips || [];
                        }
                    } catch (error) {
                        console.error('Error fetching trips:', error);
                    }
                },

                get monthYearDisplay() {
                    return this.currentDate.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
                },

                get blanks() {
                    const firstDayOfMonth = new Date(this.currentDate.getFullYear(), this.currentDate.getMonth(), 1).getDay();
                    return Array.from({ length: firstDayOfMonth });
                },

                get daysInMonth() {
                    const daysInMonth = new Date(this.currentDate.getFullYear(), this.currentDate.getMonth() + 1, 0).getDate();
                    return Array.from({ length: daysInMonth }, (_, i) => ({ day: i + 1 }));
                },

                prevMonth() {
                    this.currentDate = new Date(this.currentDate.getFullYear(), this.currentDate.getMonth() - 1, 1);
                },

                nextMonth() {
                    this.currentDate = new Date(this.currentDate.getFullYear(), this.currentDate.getMonth() + 1, 1);
                },

                goToToday() {
                    this.currentDate = new Date();
                },

                isToday(day) {
                    const today = new Date();
                    return day === today.getDate() && 
                           this.currentDate.getMonth() === today.getMonth() && 
                           this.currentDate.getFullYear() === today.getFullYear();
                },

                getTripsForDate(day) {
                    const dateStr = this.getDateString(day);
                    return this.trips.filter(trip => {
                        // Simple string comparison for YYYY-MM-DD
                        const start = trip.start_date.split('T')[0];
                        const end = trip.end_date.split('T')[0];
                        return dateStr >= start && dateStr <= end;
                    });
                },

                getDateString(day) {
                    const year = this.currentDate.getFullYear();
                    const month = String(this.currentDate.getMonth() + 1).padStart(2, '0');
                    const d = String(day).padStart(2, '0');
                    return `${year}-${month}-${d}`;
                },

                getTripColor(trip) {
                    // Generate a consistent color based on trip ID or title
                    const colors = ['bg-blue-500', 'bg-green-500', 'bg-purple-500', 'bg-orange-500', 'bg-pink-500', 'bg-teal-500'];
                    const index = (trip.id || trip.title.length) % colors.length;
                    return colors[index];
                },

                get selectedDateDisplay() {
                    if (!this.selectedDay) return '';
                    const date = new Date(this.currentDate.getFullYear(), this.currentDate.getMonth(), this.selectedDay);
                    return date.toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric', year: 'numeric' });
                },

                get selectedTrips() {
                    if (!this.selectedDay) return [];
                    return this.getTripsForDate(this.selectedDay);
                },

                selectDate(day) {
                    this.selectedDay = day;
                    document.getElementById('day_modal').showModal();
                },
            };
        }
    </script>
</body>
</html>