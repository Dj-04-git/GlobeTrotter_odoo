    <script>
        // Sample trip data (will be replaced with API calls)
        let allTrips = [];
        let filteredTrips = [];
        let currentFilter = 'upcoming';

        // Fetch logged-in user data
        async function fetchUserData() {
            try {
                const token = localStorage.getItem('token');
                const userId = localStorage.getItem('userId');

                if (!token || !userId) {
                    console.log('No user logged in, redirecting to login');
                    window.location.href = '/login';
                    return;
                }

                // Fetch user profile data
                const response = await fetch(`/api/auth/profile/${userId}`, {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    const data = await response.json();
                    const user = data.user;

                    // Update user information on the page
                    document.getElementById('userNameProfile').textContent = user.name || 'User';
                    document.getElementById('userEmail').textContent = user.email || 'user@email.com';

                    // Update avatar with first letter of name
                    const firstLetter = (user.name || 'U').charAt(0).toUpperCase();
                    document.getElementById('userAvatar').textContent = firstLetter;
                } else if (response.status === 401) {
                    console.log('Token expired, redirecting to login');
                    localStorage.clear();
                    sessionStorage.clear();
                    window.location.href = '/login';
                }
            } catch (error) {
                console.error('Error fetching user data:', error);
            }
        }

        // Logout functionality
        function setupLogoutButtons() {
            const logoutBtn = document.getElementById('logoutBtn');
            if (logoutBtn) {
                logoutBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    localStorage.clear();
                    sessionStorage.clear();
                    window.location.href = '/login';
                });
            }
        }

        // Load trips data
        async function loadTrips() {
            try {
                const token = localStorage.getItem('token');
                
                const response = await fetch('/api/trips', {
                    method: 'GET',
                    headers: { 
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                if (!response.ok) {
                    throw new Error('Failed to fetch trips');
                }

                const data = await response.json();
                
                // Transform API response to match frontend format
                allTrips = data.trips.map(trip => {
                    // Calculate trip status based on dates
                    const today = new Date();
                    const startDate = new Date(trip.start_date);
                    const endDate = new Date(trip.end_date);
                    
                    let status = 'upcoming';
                    if (today > endDate) {
                        status = 'completed';
                    } else if (today >= startDate && today <= endDate) {
                        status = 'ongoing';
                    }

                    // Generate random placeholder image
                    const images = [
                        'https://images.unsplash.com/photo-1502602898657-3e91760cbb34?w=500&h=300&fit=crop',
                        'https://images.unsplash.com/photo-1540959375944-7049f642fb25?w=500&h=300&fit=crop',
                        'https://images.unsplash.com/photo-1552400997-b96b5dbaabba?w=500&h=300&fit=crop',
                        'https://images.unsplash.com/photo-1496442226666-8d4d0e62e6e9?w=500&h=300&fit=crop',
                        'https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?w=500&h=300&fit=crop',
                        'https://images.unsplash.com/photo-1488646953014-85cb44e25828?w=500&h=300&fit=crop',
                        'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=500&h=300&fit=crop',
                        'https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?w=500&h=300&fit=crop'
                    ];
                    
                    const randomImage = images[trip.id % images.length];

                    return {
                        id: trip.id,
                        name: trip.title,
                        destination: trip.title,
                        startDate: trip.start_date,
                        endDate: trip.end_date,
                        destinationCount: 1,
                        status: status,
                        image: randomImage
                    };
                });

                filterTrips('upcoming');
                renderTrips();
            } catch (error) {
                console.error('Error loading trips:', error);
                // Fallback: show empty state
                document.getElementById('tripsContainer').innerHTML = '';
                document.getElementById('emptyState').style.display = 'block';
            }
        }

        // Filter trips by status
        function filterTrips(status) {
            currentFilter = status;
            filteredTrips = allTrips.filter(trip => trip.status === status);
            renderTrips();
            
            // Update button styles
            document.querySelectorAll('[id^="filter"]').forEach(btn => {
                btn.classList.remove('bg-green-500', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-800');
            });
            document.getElementById('filter' + status.charAt(0).toUpperCase() + status.slice(1))
                .classList.add('bg-green-500', 'text-white');
        }

        // Search trips
        function searchTrips(query) {
            if (!query) {
                filterTrips(currentFilter);
                return;
            }
            
            filteredTrips = allTrips.filter(trip => 
                trip.status === currentFilter && 
                (trip.name.toLowerCase().includes(query.toLowerCase()) || 
                 trip.destination.toLowerCase().includes(query.toLowerCase()))
            );
            renderTrips();
        }

        // Format date
        function formatDate(dateString) {
            const options = { year: 'numeric', month: 'short', day: 'numeric' };
            return new Date(dateString).toLocaleDateString('en-US', options);
        }

        // Render trips
        function renderTrips() {
            const container = document.getElementById('tripsContainer');
            const emptyState = document.getElementById('emptyState');

            if (filteredTrips.length === 0) {
                container.innerHTML = '';
                emptyState.style.display = 'block';
                return;
            }

            emptyState.style.display = 'none';
            container.innerHTML = filteredTrips.map(trip => `
                <div class="trip-card">
                    <figure class="relative">
                        <img src="${trip.image}" alt="${trip.name}" class="w-full h-48 object-cover" />
                        <div class="absolute top-4 right-4">
                            <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold ${
                                trip.status === 'upcoming' ? 'bg-blue-100 text-blue-800' :
                                trip.status === 'ongoing' ? 'bg-yellow-100 text-yellow-800' :
                                'bg-green-100 text-green-800'
                            }">
                                ${trip.status.charAt(0).toUpperCase() + trip.status.slice(1)}
                            </span>
                        </div>
                    </figure>
                    <div class="p-6">
                        <h2 class="text-xl font-bold text-gray-800 mb-2">${trip.name}</h2>
                        <p class="text-sm text-gray-600 mb-1">üìç ${trip.destination}</p>
                        <p class="text-sm text-gray-600 mb-4">üìÖ ${formatDate(trip.startDate)} - ${formatDate(trip.endDate)}</p>
                        <p class="text-sm text-green-600 font-semibold mb-4">${trip.destinationCount} Destinations</p>
                        
                        <div class="flex gap-2">
                            <button onclick="viewItinerary(${trip.id})" class="flex-1 px-3 py-2 bg-purple-500 text-white rounded-lg font-semibold hover:bg-purple-600 text-sm">Itinerary</button>
                            <button onclick="viewTrip(${trip.id})" class="flex-1 px-3 py-2 bg-green-500 text-white rounded-lg font-semibold hover:bg-green-600 text-sm">View</button>
                            <button onclick="editTrip(${trip.id})" class="flex-1 px-3 py-2 bg-blue-500 text-white rounded-lg font-semibold hover:bg-blue-600 text-sm">Edit</button>
                            <button onclick="deleteTrip(${trip.id})" class="flex-1 px-3 py-2 bg-red-500 text-white rounded-lg font-semibold hover:bg-red-600 text-sm">Delete</button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Trip actions
        function viewTrip(tripId) {
            console.log('View trip:', tripId);
            // TODO: Redirect to trip details page
            // window.location.href = `/trip-details/${tripId}`;
        }

        function viewItinerary(tripId) {
            window.location.href = `/itinerary?tripId=${tripId}`;
        }

        function editTrip(tripId) {
            console.log('Edit trip:', tripId);
            // TODO: Redirect to edit trip page
            // window.location.href = `/edit-trip/${tripId}`;
        }

        function deleteTrip(tripId) {
            if (confirm('Are you sure you want to delete this trip?')) {
                console.log('Delete trip:', tripId);
                // TODO: Make API call to delete trip
                allTrips = allTrips.filter(trip => trip.id !== tripId);
                filterTrips(currentFilter);
            }
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            fetchUserData();
            setupLogoutButtons();
            loadTrips();

            // Filter buttons
            document.getElementById('filterUpcoming').addEventListener('click', () => filterTrips('upcoming'));
            document.getElementById('filterOngoing').addEventListener('click', () => filterTrips('ongoing'));
            document.getElementById('filterCompleted').addEventListener('click', () => filterTrips('completed'));

            // Search
            document.getElementById('searchTrips').addEventListener('input', (e) => searchTrips(e.target.value));

            // Add new trip button
            document.getElementById('addNewTripBtn').addEventListener('click', function() {
                window.location.href = '/create-trip';
            });

            document.getElementById('createTripBtn').addEventListener('click', function() {
                window.location.href = '/create-trip';
            });

            // User profile click
            document.getElementById('userProfileSection').addEventListener('click', function() {
                window.location.href = '/profile';
            });
        });
    </script>
