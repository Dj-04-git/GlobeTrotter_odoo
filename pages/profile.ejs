    <script>
        function profileApp() {
            return {
                user: {
                    name: '',
                    email: '',
                    phone: '',
                    location: '',
                    about: '',
                    initial: ''
                },
                editForm: {
                    name: '',
                    email: '',
                    phone: '',
                    location: '',
                    about: ''
                },
                trips: [],
                upcomingTrips: [],
                pastTrips: [],
                isLoading: true,
                isSaving: false,

                init() {
                    this.fetchUserData();
                    this.fetchTrips();
                },

                async fetchUserData() {
                    const token = localStorage.getItem('token');
                    const userId = localStorage.getItem('userId');

                    if (!token || !userId) {
                        window.location.href = '/login';
                        return;
                    }

                    try {
                        const response = await fetch(`/api/auth/profile/${userId}`, {
                            headers: { 'Authorization': `Bearer ${token}` }
                        });

                        if (response.ok) {
                            const data = await response.json();
                            this.user = { ...data.user };
                            this.user.initial = (this.user.name || 'U').charAt(0).toUpperCase();
                        } else if (response.status === 401) {
                            this.logout();
                        }
                    } catch (error) {
                        console.error('Error fetching profile:', error);
                    }
                },

                async fetchTrips() {
                    const token = localStorage.getItem('token');
                    
                    try {
                        const response = await fetch('/api/trips', {
                            headers: { 'Authorization': `Bearer ${token}` }
                        });

                        if (response.ok) {
                            const data = await response.json();
                            this.trips = data.trips || [];
                            this.categorizeTrips();
                        }
                    } catch (error) {
                        console.error('Error fetching trips:', error);
                    } finally {
                        this.isLoading = false;
                    }
                },

                categorizeTrips() {
                    const today = new Date();
                    today.setHours(0, 0, 0, 0);

                    this.upcomingTrips = this.trips.filter(trip => {
                        const startDate = new Date(trip.start_date);
                        return startDate >= today;
                    }).sort((a, b) => new Date(a.start_date) - new Date(b.start_date));

                    this.pastTrips = this.trips.filter(trip => {
                        const startDate = new Date(trip.start_date);
                        return startDate < today;
                    }).sort((a, b) => new Date(b.start_date) - new Date(a.start_date));
                },

                formatDateRange(start, end) {
                    if (!start) return 'Date not set';
                    const s = new Date(start).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                    if (!end) return s;
                    const e = new Date(end).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                    return `${s} - ${e}`;
                },

                logout() {
                    localStorage.clear();
                    sessionStorage.clear();
                    window.location.href = '/login';
                },

                openEditModal() {
                    // Copy current user data to edit form
                    this.editForm = {
                        name: this.user.name,
                        email: this.user.email,
                        phone: this.user.phone || '',
                        location: this.user.location || '',
                        about: this.user.about || ''
                    };
                    document.getElementById('editProfileModal').showModal();
                },

                closeEditModal() {
                    document.getElementById('editProfileModal').close();
                },

                async saveProfile() {
                    const token = localStorage.getItem('token');
                    const userId = localStorage.getItem('userId');

                    if (!token || !userId) {
                        alert('Session expired. Please login again.');
                        window.location.href = '/login';
                        return;
                    }

                    this.isSaving = true;

                    try {
                        const payload = {
                            name: this.editForm.name,
                            phone: this.editForm.phone,
                            location: this.editForm.location,
                            about: this.editForm.about
                        };

                        console.log('Saving profile with data:', payload);

                        const response = await fetch(`/api/auth/profile/${userId}`, {
                            method: 'PUT',
                            headers: {
                                'Authorization': `Bearer ${token}`,
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(payload)
                        });

                        console.log('Response status:', response.status);
                        const data = await response.json();
                        console.log('Response data:', data);

                        if (response.ok) {
                            this.user = { ...data.user };
                            this.user.initial = (this.user.name || 'U').charAt(0).toUpperCase();
                            this.closeEditModal();
                            alert('Profile updated successfully!');
                        } else {
                            alert('Error updating profile: ' + (data.error || 'Unknown error'));
                        }
                    } catch (error) {
                        console.error('Error saving profile:', error);
                        alert('Error updating profile. Please try again.');
                    } finally {
                        this.isSaving = false;
                    }
                }
            }
        }
    </script>
