                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-xl font-bold text-gray-800 border-l-4 border-gold-400 pl-3">Preplanned Trips</h3>
                    <a href="/create-trip" class="btn btn-sm bg-gold-400 hover:bg-gold-500 text-white border-none gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                        Plan a Trip
                    </a>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <template x-for="trip in upcomingTrips" :key="trip.id">
                        <div class="card bg-base-100 shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100">
                            <figure class="h-40 bg-gray-200 relative overflow-hidden">
                                <!-- Placeholder Image Logic -->
                                <img :src="'https://source.unsplash.com/random/400x200/?travel,' + trip.title.split(' ')[0]" alt="Trip Image" class="w-full h-full object-cover" @error="$el.src='https://placehold.co/400x200?text=Trip'" />
                                <div class="absolute top-2 right-2 badge badge-success text-white text-xs font-bold">Upcoming</div>
                            </figure>
                            <div class="card-body p-5">
                                <h4 class="card-title text-lg font-bold text-gray-800" x-text="trip.title"></h4>
                                <div class="flex items-center gap-2 text-sm text-gray-500 mt-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                                    <span x-text="formatDateRange(trip.start_date, trip.end_date)"></span>
                                </div>
                                <div class="card-actions justify-end mt-4">
                                    <a :href="'/trips/' + trip.id" class="btn btn-sm btn-outline border-gold-400 text-gold-600 hover:bg-gold-400 hover:text-white hover:border-gold-400 w-full">View Details</a>
                                </div>
                            </div>
                        </div>
                    </template>
                    
                    <!-- Empty State -->
                    <div x-show="upcomingTrips.length === 0" class="col-span-full card bg-base-100 border-2 border-dashed border-gray-300 p-8 text-center">
                        <div class="text-4xl mb-2">üó∫Ô∏è</div>
