<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verify OTP</title>
  <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            gold: {
              400: '#d4a574',
              500: '#c4945a',
            }
          }
        }
      }
    }
  </script>
</head>
<body class="min-h-screen flex items-center justify-center bg-gradient-to-br from-[#f5f0e8] to-[#f0ebe0] p-5 font-sans">
  <div class="card w-full max-w-md bg-base-100 shadow-2xl">
    <div class="card-body p-10">
      <div class="text-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-2">Verify Email</h1>
        <p class="text-sm text-gray-500">We've sent a 6-digit OTP to your email. Enter it below to verify your account.</p>
      </div>

      <div class="alert alert-success text-sm py-3 hidden" id="successMessage">
        <span>Verification successful! Redirecting...</span>
      </div>

      <form id="otpForm" class="space-y-6">
        <div class="form-control w-full">
          <div class="flex gap-2 justify-center mb-2" id="otpContainer">
            <input class="input input-bordered w-12 h-12 text-center text-xl font-bold p-0 focus:border-gold-400 focus:outline-none" type="text" maxlength="1" inputmode="numeric" required>
            <input class="input input-bordered w-12 h-12 text-center text-xl font-bold p-0 focus:border-gold-400 focus:outline-none" type="text" maxlength="1" inputmode="numeric" required>
            <input class="input input-bordered w-12 h-12 text-center text-xl font-bold p-0 focus:border-gold-400 focus:outline-none" type="text" maxlength="1" inputmode="numeric" required>
            <input class="input input-bordered w-12 h-12 text-center text-xl font-bold p-0 focus:border-gold-400 focus:outline-none" type="text" maxlength="1" inputmode="numeric" required>
            <input class="input input-bordered w-12 h-12 text-center text-xl font-bold p-0 focus:border-gold-400 focus:outline-none" type="text" maxlength="1" inputmode="numeric" required>
            <input class="input input-bordered w-12 h-12 text-center text-xl font-bold p-0 focus:border-gold-400 focus:outline-none" type="text" maxlength="1" inputmode="numeric" required>
          </div>
          <label class="label py-0 hidden justify-center" id="otpErrorLabel">
            <span class="label-text-alt text-error" id="otpError"></span>
          </label>
        </div>

        <button type="submit" class="btn w-full bg-gradient-to-br from-gold-400 to-gold-500 border-none text-white hover:shadow-lg hover:-translate-y-0.5 transition-all text-base">Verify Email</button>
      </form>

      <div class="text-center mt-6">
        <button id="resendBtn" class="btn btn-sm btn-ghost text-gray-600 font-normal hover:bg-gray-100">Resend OTP</button>
        <div id="timer" class="text-gold-400 font-semibold text-sm mt-2 hidden"></div>
      </div>

      <div class="text-center mt-4 text-sm text-gray-600">
        <a href="/register" class="text-gold-400 font-semibold hover:text-gold-500 transition-colors">Back to Register</a>
      </div>
    </div>
  </div>

  <script>
    const otpForm = document.getElementById('otpForm');
    const successMessage = document.getElementById('successMessage');
    const otpInputs = document.querySelectorAll('#otpContainer input');
    const otpErrorLabel = document.getElementById('otpErrorLabel');
    const otpError = document.getElementById('otpError');
    const resendBtn = document.getElementById('resendBtn');
    const timerDisplay = document.getElementById('timer');

    let timeLeft = 0;
    let timerId = null;

    // OTP Input Logic
    otpInputs.forEach((input, index) => {
      input.addEventListener('input', (e) => {
        if (e.target.value.length === 1) {
          if (index < otpInputs.length - 1) {
            otpInputs[index + 1].focus();
          }
        }
      });

      input.addEventListener('keydown', (e) => {
        if (e.key === 'Backspace' && !e.target.value) {
          if (index > 0) {
            otpInputs[index - 1].focus();
          }
        }
      });
      
      // Allow only numbers
      input.addEventListener('keypress', (e) => {
        if (!/[0-9]/.test(e.key)) {
          e.preventDefault();
        }
      });
    });

    function startTimer() {
      timeLeft = 60;
      resendBtn.disabled = true;
      resendBtn.classList.add('opacity-50', 'cursor-not-allowed');
      timerDisplay.classList.remove('hidden');
      
      clearInterval(timerId);
      timerId = setInterval(() => {
        timeLeft--;
        timerDisplay.textContent = `Resend available in ${timeLeft}s`;
        
        if (timeLeft <= 0) {
          clearInterval(timerId);
          resendBtn.disabled = false;
          resendBtn.classList.remove('opacity-50', 'cursor-not-allowed');
          timerDisplay.classList.add('hidden');
        }
      }, 1000);
    }

    resendBtn.addEventListener('click', async () => {
      const email = sessionStorage.getItem('registerEmail');
      if (!email) return;

      try {
        const response = await fetch('/api/auth/resend-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email }),
        });

        if (response.ok) {
          startTimer();
          otpErrorLabel.classList.remove('hidden');
          otpError.textContent = 'OTP resent successfully';
          otpError.classList.remove('text-error');
          otpError.classList.add('text-success');
          setTimeout(() => {
            otpErrorLabel.classList.add('hidden');
            otpError.classList.remove('text-success');
            otpError.classList.add('text-error');
          }, 3000);
        }
      } catch (error) {
        console.error('Error:', error);
      }
    });

    otpForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      otpInputs.forEach(input => input.classList.remove('input-error'));
      otpErrorLabel.classList.add('hidden');
      successMessage.classList.add('hidden');

      const email = sessionStorage.getItem('registerEmail');
      if (!email) {
        otpErrorLabel.classList.remove('hidden');
        otpError.textContent = 'Session expired. Please register again.';
        setTimeout(() => window.location.href = '/register', 2000);
        return;
      }

      let otp = '';
      otpInputs.forEach(input => otp += input.value);

      if (otp.length !== 6) {
        otpInputs.forEach(input => input.classList.add('input-error'));
        otpErrorLabel.classList.remove('hidden');
        otpError.textContent = 'Please enter a valid 6-digit OTP';
        return;
      }

      try {
        const response = await fetch('/api/auth/verify-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email, otp }),
        });

        const data = await response.json();

        if (response.ok) {
          successMessage.classList.remove('hidden');
          successMessage.textContent = 'Verification successful! Redirecting to login...';
          sessionStorage.removeItem('registerEmail');
          setTimeout(() => {
            window.location.href = '/login';
          }, 2000);
        } else {
          otpInputs.forEach(input => input.classList.add('input-error'));
          otpErrorLabel.classList.remove('hidden');
          otpError.textContent = data.message || data.error || 'Verification failed';
        }
      } catch (error) {
        console.error('Error:', error);
        otpErrorLabel.classList.remove('hidden');
        otpError.textContent = 'An error occurred. Please try again.';
      }
    });
  </script>
</body>
</html>
