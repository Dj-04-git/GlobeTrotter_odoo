  <div class="flex">
    <!-- Sidebar -->
    <%- include('partials/sidebar', { currentPage: 'searchactivity' }) %>

    <!-- Main Content -->
    <main class="flex-1 lg:ml-64 p-6">
      <div class="max-w-6xl mx-auto border-2 border-gray-300 bg-base-100">

    <ul class="menu w-full px-4 gap-2 text-base font-medium text-gray-600">
      <li>
        <a href="/dashboard" class="hover:bg-yellow-400/10 hover:text-yellow-600">
          <span class="text-xl">üè†</span> Dashboard
        </a>
      </li>
      <li>
        <a href="/trips" class="hover:bg-yellow-400/10 hover:text-yellow-600">
          <span class="text-xl">‚úàÔ∏è</span> My Trips
        </a>
      </li>
      <li>
        <a href="/search-activity" class="bg-yellow-400/10 text-yellow-600 rounded-lg">
          <span class="text-xl">üîç</span> Search Cities & Activities
        </a>
      </li>
      <li>
        <a href="/profile" class="hover:bg-yellow-400/10 hover:text-yellow-600">
          <span class="text-xl">üë§</span> Profile
