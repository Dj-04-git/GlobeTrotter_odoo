<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Activity Search - GlobalTrotter</title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    .result-card {
      min-height: 100px;
      transition: all 0.3s ease;
    }
    .result-card:hover {
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      transform: translateY(-2px);
    }
  </style>
</head>

<body class="bg-white min-h-screen">

<div class="max-w-6xl mx-auto border-2 border-gray-300">

  <!-- HEADER -->
  <div class="border-b-2 border-gray-300 p-4 flex justify-between items-center">
    <span class="text-lg font-semibold">GlobalTrotter</span>
    <div class="w-10 h-10 border-2 border-gray-400 rounded-full"></div>
  </div>

  <!-- SEARCH BAR -->
  <div class="p-4 border-b border-gray-300">
    <div class="flex gap-2 items-center">
      <div class="flex-1 relative">
        <input
          id="searchInput"
          type="text"
          placeholder="Paragliding"
          class="w-full pl-4 pr-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <button class="px-4 py-2 border rounded hover:bg-gray-50">
        Group by
      </button>

      <button class="px-4 py-2 border rounded hover:bg-gray-50">
        Filter
      </button>

      <button class="px-4 py-2 border rounded hover:bg-gray-50">
        Sort by...
      </button>
    </div>
  </div>

  <!-- RESULTS -->
  <div class="p-6">
    <h2 class="text-lg font-semibold mb-6">Results</h2>

    <div class="space-y-4">

      <% for (let i = 1; i <= 7; i++) { %>
        <div
          class="result-card border-2 border-gray-300 rounded-lg p-6 cursor-pointer hover:border-blue-400"
        >
          <div class="text-center text-gray-600">
            Option <%= i %> and its details
          </div>
        </div>
      <% } %>

    </div>
  </div>

</div>

</body>
</html>
